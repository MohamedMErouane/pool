          "75": { "tokens": 30, "item": "Gold Cue Skin" },
          "100": { "tokens": 50, "item": "Diamond Cue Skin" }
        }
      },
      "miniGames": {
        "enabled": true,
        "dailyBreak": {
          "attempts": 3,
          "baseReward": 5,
          "recordBonus": 20
        },
        "powerShot": {
          "levels": 5,
          "baseReward": 10,
          "recordBonus": 30,
          "powerThreshold": 0.6
        }
      },
      "solanaWallet": {
        "enabled": true,
        "developmentMode": false,
        "minimumClaim": 10,
        "network": "devnet",
        "realWallet": true,
        "requiredWallet": "phantom"
      }
    },
    "ui": {
      "dashboard": {
        "position": "top-right",
        "autoUpdate": 30000,
