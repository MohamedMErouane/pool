{
  "mvp": {
    "version": "1.0.0",
    "features": {
      "dailyRewards": {
        "enabled": true,
        "baseReward": 10,
        "maxStreakBonus": 2.0,
        "miningRates": {
          "shotAccuracy": 0.5,
          "ballPotting": 2,
          "gameVictory": 10
        }
      },
      "heatMeter": {
        "enabled": true,
        "maxHeat": 100,
        "decayRate": 0.1,
